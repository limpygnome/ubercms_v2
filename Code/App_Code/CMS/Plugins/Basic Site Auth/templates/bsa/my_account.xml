<?xml version="1.0" encoding="utf-8"?><template><path><![CDATA[bsa/my_account]]></path><description><![CDATA[The my account page, used to change the properties of an account.]]></description><html><![CDATA[<form method="post" action="/my_account">
	<div class="TABLE">
		<div class="ROW HEADER">
			<div class="CELL1">
				<div class="P">
					Security
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Username:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<!--bsa_ma_username-->
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Current Password:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="password" placeholder="Current password..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Captcha:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<!--include(captcha/embed)-->
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW HEADER">
			<div class="CELL1">
				<div class="P">
					Account
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					New Password:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="new_password" placeholder="New password..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Retype New Password:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="new_password_confirm" placeholder="Retype new password..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW HEADER">
			<div class="CELL1">
				<div class="P">
					Recovery
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Secret Question:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="text" name="secret_question" value="<!--bsa_ma_secret_question-->" placeholder="Secret question..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Secret Answer:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="secret_answer" value="<!--bsa_ma_secret_answer-->" placeholder="Secret answer..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Retype Secret Answer:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="secret_answer_confirm" value="<!--bsa_ma_secret_answer_confirm-->" placeholder="Retype secret answer..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				&nbsp;
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="submit" value="Change" />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
	</div>
	<!--csrf()-->
</form>
<!--IF:bsa_ma_error-->
<p class="ERROR">
	<!--bsa_ma_error-->
</p>
<!--ENDIF:bsa_ma_error-->
<!--IF:bsa_ma_success-->
<p class="SUCCESS">
	Your account settings have successfully been updated!
</p>
<!--ENDIF:bsa_ma_success-->

<h3>Options</h3>
<p>
	<a href="/my_account/account_log" class="BUTTON">Account Log</a>
	<a href="/my_account/close" class="BUTTON">Close Account</a>
</p>]]></html></template>