<?xml version="1.0" encoding="utf-8"?><template><path><![CDATA[bsa/my_account]]></path><description><![CDATA[The my account page, used to change the properties of an account.]]></description><html><![CDATA[<h2>My Account</h2>
<form method="post" action="/my_account">
	<div class="TABLE">
		<div class="ROW HEADER">
			<div class="CELL1">
				Security
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Username:
			</div>
			<div class="CELL2">
				<!--bsa_ma_username-->
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Current Password:
			</div>
			<div class="CELL2">
				<input type="password" name="password" placeholder="Current password..." />
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Captcha:
			</div>
			<div class="CELL2">
				<!--include(captcha/embed)-->
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW HEADER">
			<div class="CELL1">
				Account
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				New Password:
			</div>
			<div class="CELL2">
				<input type="password" name="new_password" placeholder="New password..." />
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Retype New Password:
			</div>
			<div class="CELL2">
				<input type="password" name="new_password_confirm" placeholder="Retype new password..." />
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW HEADER">
			<div class="CELL1">
				Recovery
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Secret Question:
			</div>
			<div class="CELL2">
				<input type="text" name="secret_question" value="<!--bsa_ma_secret_question-->" placeholder="Secret question..." />
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Secret Answer:
			</div>
			<div class="CELL2">
				<input type="password" name="secret_answer" value="<!--bsa_ma_secret_answer-->" placeholder="" />
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				Retype Secret Answer:
			</div>
			<div class="CELL2">
				<input type="password" name="secret_answer_confirm" value="<!--bsa_ma_secret_answer-->" placeholder="" />
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				&nbsp;
			</div>
			<div class="CELL2">
				<input type="submit" value="Change" />
			</div>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
	</div>
	<!--csrf()-->
</form>]]></html></template>