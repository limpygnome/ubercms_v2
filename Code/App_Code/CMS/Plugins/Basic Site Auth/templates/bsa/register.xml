<?xml version="1.0" encoding="utf-8"?><template><path><![CDATA[bsa/register]]></path><description><![CDATA[The register page template.]]></description><html><![CDATA[<form method="post" action="/register">
	<div class="TABLE">
		<div class="ROW HEADER">
			<div class="CELL1">
				<div class="P">
					Account
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Username:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="text" name="username" value="<!--:bsa_register_username-->" placeholder="Desired username..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Password:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="password" placeholder="Desired password..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Retype Password:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="password_confirm" placeholder="Retype the password..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					E-mail:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="text" name="email" value="<!--:bsa_register_email-->" placeholder="E-mail..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW HEADER">
			<div class="CELL1">
				<div class="P">
					Recovery
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Secret Question:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="text" name="secret_question" value="<!--:bsa_register_secret_question-->" placeholder="Secret question..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Secret Answer:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="secret_answer" value="<!--:bsa_register_secret_answer-->" placeholder="Secret answer..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Retype Secret Answer:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="password" name="secret_answer_confirm" value="<!--:bsa_register_secret_answer-->" placeholder="Retype secret answer..." />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL1">
				<div class="P">
					Note: the secret question and answer can both be left blank to disable recovery using this option. Your secret answer is like a second password, make sure it's secure!
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW HEADER">
			<div class="CELL1">
				<div class="P">
					Security
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				<div class="P">
					Captcha:
				</div>
			</div>
			<div class="CELL2">
				<div class="P">
					<!--include(captcha/embed)-->
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="ROW">
			<div class="CELL2">
				&nbsp;
			</div>
			<div class="CELL2">
				<div class="P">
					<input type="submit" value="Register" />
				</div>
			</div>
			<div class="clear"></div>
		</div>
		<div class="clear"></div>
	</div>
	<!--csrf()-->
	<!--IF:bsa_register_error-->
		<p class="ERROR">
			<!--bsa_register_error-->
		</p>
	<!--ENDIF:bsa_register_error-->
</form>]]></html></template>